@model Diary.NET.Models.DiaryListModel

@{
    ViewBag.Title = "Diary Home";
    Layout = "~/Views/Shared/_LayoutDiary.cshtml";
    @*<style>
        #list-table {
            table-layout: fixed;
            word-wrap: break-word;
            over-flow: break-word;
        }
    </style>*@
}



<p>
    @Html.ActionLink("Create New", "New")
</p>

@if (Model.Message != null)
{
    <div class="alert alert-info w-100 mt-3 mb-3">@Model.Message</div>
}

<div class="table-responsive">
    <table class="table" id="list-table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Body
            </th>
            <th>
                Last UpDated
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Diaries)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @item.Body.Substring(0, item.Body.Length > 100 ? 100 : item.Body.Length)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpDated)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                    <a href="@Url.Action("Details", "Diary", new { id = item.Id })" class="text-decoration-none">
                        <span><i class="fa fa-eye"></i></span>
                    </a>
                    <span class="ml-1 mr-1">|</span>
                    <a href="@Url.Action("Delete", "Diary", new { id = item.Id })" class="text-decoration-none">
                        <span><i class="fa fa-minus-circle"></i></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
